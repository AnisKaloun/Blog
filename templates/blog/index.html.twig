{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}
    {% for post in Posts %}
        <h1>{{ post.title }}</h1>
        <p>{{post.content}}</p>
        {% set foo = post.getUrlAlias() %}
        <a href="/posts/{{foo}}">Lire</a>
    {% endfor %}
    {{ knp_pagination_render(Posts) }}
{% endblock %}
